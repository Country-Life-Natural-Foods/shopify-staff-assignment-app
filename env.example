# Shopify Staff Assignment App Configuration

# Your app's API key and secret from Partner Dashboard
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# Your app's URL (use ngrok for local development)
SHOPIFY_APP_URL=https://your-app-url.ngrok.io

# Database configuration
DATABASE_URL=./database.sqlite

# Session secret (generate a random string)
SESSION_SECRET=your_session_secret_here

# Optional: Redis connection string for persistent sessions (recommended in production)
REDIS_URL=

# Environment
NODE_ENV=development

# Optional: Enable debug logging
DEBUG=false